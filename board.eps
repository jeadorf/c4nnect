%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 55 444 472 837
%%HiResBoundingBox: 75.252344 464.700000 451.250000 816.699609
%...................................
%%LanguageLevel: 2
%%EndComments

100 490 translate
50 50 scale
0.05 setlinewidth

/Times-Roman findfont
0.42 scalefont setfont

/boardcolor { 1 setgray } bind def
/gridcolor { 0 setgray } bind def
/onecolor { 0.9 0.9 0.9 setrgbcolor } bind def
/twocolor { 0 setgray } bind def
/margincolor { 0 setgray } bind def

% draw background
0 0 moveto 7 0 rlineto 0 6 rlineto -7 0 rlineto closepath
boardcolor fill

% draw grid
gridcolor
% rows
gsave
   7 { 0 0 moveto 7 0 lineto stroke 0 1 translate } repeat
grestore
gsave
   0 1 5 { -0.5 0.35 moveto 1 string cvs show 0 1 translate } for 
grestore
% columns
gsave
   8 { 0 0 moveto 0 6 lineto stroke 1 0 translate } repeat
grestore
gsave
   0 1 6 { 0.35 -0.5 moveto 1 string cvs show 1 0 translate } for 
grestore

% draw piece
% row column => -
/put{
  gsave
    exch translate
    0.5 0.5 translate
    0 0 0.42 0 360 arc
    gsave fill grestore
    margincolor 
    stroke
  grestore  
} bind def

/putwhite { onecolor put } bind def
/putblack { twocolor put } bind def

/tomove {
  gsave
    moveto
    gridcolor
    show
  grestore
} bind def

/whitetomove { (white to move)  0 6.25 tomove } bind def
/blacktomove { (black to move) 4.52 6.25 tomove } bind def

/wins {
  gsave
    3.20 6.25 moveto
    gridcolor
    show
  grestore
} bind def

/whitewins { (1-0) wins } bind def
/blackwins { (0-1) wins } bind def
/draw { (0-0) wins } bind def
